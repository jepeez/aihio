                const rows = Math.ceil(height / hexYSpacing) + 1;
                const cols = Math.ceil(width / hexXSpacing) + 1;

                for (let c = 0; c < cols; c++) {
                    gridMap[c] = [];
                    for (let r = 0; r < rows; r++) {
                        let x = c * hexXSpacing;
                        let y = r * hexYSpacing;
                        if (c % 2 === 1) {
                            y += hexYSpacing / 2;
                        }
                        const hex = new Hexagon(x, y, r, c);
                        hexagons.push(hex);
                        gridMap[c][r] = hex;
                    }
                }

                updateMenuOrder();
            }

