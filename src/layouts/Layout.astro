                });
            }

            function resize() {
                width = window.innerWidth;
                height = window.innerHeight;
                isMobile = width < 768;

                hexRadius = isMobile ? 35 : 25;
                hexHeight = hexRadius * Math.sqrt(3);
                hexWidth = hexRadius * 2;
                hexXSpacing = hexWidth * 0.75;
                hexYSpacing = hexHeight;

                if (canvasStatic && canvasActive) {
                    canvasStatic.width = width;
                    canvasStatic.height = height;
                    canvasActive.width = width;
                    canvasActive.height = height;
                }

                if (canvasMenu) {
                    canvasMenu.width = width;
                    canvasMenu.height = height;
                }

                initGrid();
                drawStaticGrid();

                // Clear cache on resize
                cachedActiveHexes = [];
                cachedClosestHex = null;
                lastMouse = { x: -1000, y: -1000 };

                // Handle forced start animation state
                // Handle forced start animation state
                if (startMenuCloseAnimation) {
                    console.log(
                        "Resize: initializing close animation state. Hexagons:",
                        hexagons.length,
                    );

                    if (hexagons.length > 0) {
                        updateMenuOrder();
                        menuAnimationProgress = hexagons.length;
                        isMenuOpen = false;

                        const overlay = document.getElementById(
                            "mobile-menu-overlay",
                        );
                        const bg = overlay
                            ? overlay.querySelector(".menu-bg")
                            : null;

                        if (bg instanceof HTMLElement) {
                            // Restore transition but OVERRIDE delay to 0s to avoid black screen hang
                            bg.style.transition = "opacity 0.5s ease 0s";
                            // Force reflow
                            void bg.offsetWidth;
                            // Fade out
                            bg.style.opacity = "0";
                        }
                        if (overlay) {
                            // We don't need to touch overlay transition as visibility handles itself
                            overlay.style.transition = "";
                        }
                        startMenuCloseAnimation = false;
                    } else {
                        console.warn(
                            "Resize: Hexagons empty during forced animation start! Retrying in 100ms",
                        );
                        setTimeout(() => {
                            if (hexagons.length > 0) {
                                startMenuCloseAnimation = true;
                                resize();
                            }
                        }, 100);
                        // Don't set false yet, let retry handle it
                        startMenuCloseAnimation = false;
                    }
                }
            }

            function animate(currentTime) {
                if (!isAnimating) return;
                if (!ctxActive) return;

                // Delta Time Calculation
                if (!lastTime || !currentTime) {
                    lastTime = currentTime || performance.now();
                }

                const deltaTime = currentTime - lastTime;
                lastTime = currentTime;

                // Normalize to target 60fps (approx 16.67ms per frame)
                const scale = Math.min(deltaTime / 16.67, 4); // Cap at 4x speed

                ctxActive.clearRect(0, 0, width, height);
                ctxActive.globalCompositeOperation = "lighter";

                // Input Intensity Logic
                if (isMobile) {
                    if (isTouching) {
                        inputIntensity = 1;
                    } else {
                        inputIntensity = Math.max(
                            0,
                            inputIntensity - deltaTime / 500,
                        );
                    }
                } else {
                    inputIntensity = 1;
                }

                // Optimized Neighbor Search with Caching
                // Only recalculate if mouse moved significantly
                if (
                    Math.abs(mouse.x - lastMouse.x) > 1 ||
                    Math.abs(mouse.y - lastMouse.y) > 1
                ) {
                    lastMouse.x = mouse.x;
                    lastMouse.y = mouse.y;

                    const approxCol = Math.floor(mouse.x / hexXSpacing);
                    const approxRow = Math.floor(mouse.y / hexYSpacing);
                    const searchRange = 6; // Check neighbors within range

                    cachedClosestHex = null;
                    let minDist = Infinity;
                    cachedActiveHexes = [];

                    // Only check hexagons in the vicinity of the mouse
                    for (
                        let c = approxCol - searchRange;
                        c <= approxCol + searchRange;
                        c++
                    ) {
                        if (!gridMap[c]) continue;
                        for (
                            let r = approxRow - searchRange;
                            r <= approxRow + searchRange;
                            r++
                        ) {
                            const hex = gridMap[c][r];
                            if (!hex) continue;

                            const dist = Math.hypot(
                                hex.x - mouse.x,
                                hex.y - mouse.y,
                            );
                            if (dist < 200) {
                                cachedActiveHexes.push({ hex, dist });
                                if (dist < minDist) {
                                    minDist = dist;
                                    cachedClosestHex = hex;
                                }
                            }
                        }
                    }
                }

                // Draw Cached Hexes
                if (cachedClosestHex) {
                    const glowRadius = 100;
                    cachedActiveHexes.forEach(({ hex, dist }) => {
                        if (dist < glowRadius) {
                            const intensity = 1 - dist / glowRadius;
                            if (inputIntensity > 0.01) {
                                if (hex === cachedClosestHex) {
                                    ctxActive.shadowBlur = 20;
                                    ctxActive.shadowColor = `rgba(2, 153, 225, ${inputIntensity})`;
                                    hex.draw(
                                        ctxActive,
                                        `rgba(2, 153, 225, ${inputIntensity})`,
                                        `rgba(2, 153, 225, ${0.3 * inputIntensity})`,
                                        2,
                                    );
                                    ctxActive.shadowBlur = 0;
                                } else {
                                    hex.draw(
                                        ctxActive,
                                        `rgba(2, 153, 225, ${intensity * 0.5 * inputIntensity})`,
                                        null,
                                        1,
                                    );
                                }
                            }
                        }
                    });
                }

                // Ripples
                for (let i = ripples.length - 1; i >= 0; i--) {
                    const ripple = ripples[i];
                    ripple.radius += ripple.speed * scale;
                    ripple.life -= ripple.decay * scale;

                    if (ripple.life <= 0) {
                        ripples.splice(i, 1);
                        continue;
                    }

                    ctxActive.beginPath();
                    ctxActive.arc(
                        ripple.x,
                        ripple.y,
                        ripple.radius,
                        0,
                        Math.PI * 2,
                    );
                    ctxActive.strokeStyle = `rgba(2, 153, 225, ${ripple.life * 0.5})`;
                    ctxActive.lineWidth = 2;
                    ctxActive.stroke();
                }

                // Red Pings
                const pingChance = isMobile ? 0.002 : 0.01;
                if (Math.random() < pingChance * scale && hexagons.length > 0) {
                    const randomHex =
                        hexagons[Math.floor(Math.random() * hexagons.length)];
                    redPings.push({
                        hex: randomHex,
                        life: 1.0,
                        decay: 0.01 * scale,
                    });
                }

                for (let i = redPings.length - 1; i >= 0; i--) {
                    const ping = redPings[i];
                    ping.life -= ping.decay * scale;

                    if (ping.life <= 0) {
                        redPings.splice(i, 1);
                        continue;
                    }

                    const opacity = ping.life;
                    ping.hex.draw(
                        ctxActive,
                        `rgba(255, 50, 50, ${opacity})`,
                        `rgba(255, 50, 50, ${opacity * 0.1})`,
                        1,
                    );
                }

                // Menu Animation
                if (ctxMenu && hexagons.length > 0) {
                    const totalHexagons = hexagons.length;
                    const speed = Math.ceil(totalHexagons / (60 * 0.5)) * scale; // 0.5s duration

                    if (isMenuOpen) {
                        // OPENING: Top to Bottom
                        if (menuAnimationProgress < totalHexagons) {
                            menuAnimationProgress = Math.min(
                                menuAnimationProgress + speed,
                                totalHexagons,
                            );
                        }
                    } else {
                        // CLOSING: Bottom to Top
                        if (menuAnimationProgress > 0) {
                            menuAnimationProgress = Math.max(
                                menuAnimationProgress - speed,
                                0,
                            );
                        } else {
                            // Clean up overlay visibility if it was forced
                            const overlay = document.getElementById(
                                "mobile-menu-overlay",
                            );
                            if (
                                overlay &&
                                overlay.style.visibility === "visible"
                            ) {
                                overlay.style.visibility = "";
                            }
                        }
                    }

                    // Render
                    if (menuAnimationProgress > 0) {
                        ctxMenu.clearRect(0, 0, width, height);

                        // Batch Draw: Background Fill & Gap Sealing
                        ctxMenu.beginPath();
                        const count = Math.floor(menuAnimationProgress);

                        for (let i = 0; i < count; i++) {
                            const hexIndex = menuHexagonOrder[i];
                            const hex = hexagons[hexIndex];
                            if (hex) {
                                // Add hex path to current context path
                                for (let j = 0; j < 6; j++) {
                                    const angle = (Math.PI / 3) * j;
                                    const hx =
                                        hex.x + hexRadius * Math.cos(angle);
                                    const hy =
                                        hex.y + hexRadius * Math.sin(angle);
                                    if (j === 0) ctxMenu.moveTo(hx, hy);
                                    else ctxMenu.lineTo(hx, hy);
                                }
                                ctxMenu.closePath();
                            }
                        }

                        // Fill and Seal Gaps
                        ctxMenu.fillStyle = "#050505";
                        ctxMenu.fill();
                        ctxMenu.lineWidth = 2; // Reduced width
                        // ctxMenu.lineJoin = "round"; // Removed to keep sharp hex edges
                        ctxMenu.strokeStyle = "#050505";
                        ctxMenu.stroke();

                        // Batch Draw: Visual Borders
                        ctxMenu.beginPath();
                        for (let i = 0; i < count; i++) {
                            const hexIndex = menuHexagonOrder[i];
                            const hex = hexagons[hexIndex];
                            if (hex) {
                                for (let j = 0; j < 6; j++) {
                                    const angle = (Math.PI / 3) * j;
                                    const hx =
                                        hex.x + hexRadius * Math.cos(angle);
                                    const hy =
                                        hex.y + hexRadius * Math.sin(angle);
                                    if (j === 0) ctxMenu.moveTo(hx, hy);
                                    else ctxMenu.lineTo(hx, hy);
                                }
                                ctxMenu.closePath();
                            }
                        }

                        ctxMenu.lineWidth = 1;
                        ctxMenu.strokeStyle = "rgba(2, 153, 225, 0.15)";
                        ctxMenu.stroke();

                        // Draw Tracers
                        updateAndDrawTracers(ctxMenu);
                    } else {
                        // Ensure clear when closed
                        ctxMenu.clearRect(0, 0, width, height);
                        menuTracers = []; // Clear tracers
                    }
                }

                animationFrameId = requestAnimationFrame(animate);
            }

            // Setup Grid System
            const setupGrid = () => {
                canvasStatic = document.getElementById("grid-static");
                canvasActive = document.getElementById("grid-active");

                if (canvasStatic && canvasActive) {
                    ctxStatic = canvasStatic.getContext("2d");
                    ctxActive = canvasActive.getContext("2d");
                }

                canvasMenu = document.getElementById("menu-canvas");
                if (canvasMenu) {
                    ctxMenu = canvasMenu.getContext("2d");
                }

                if (canvasStatic || canvasActive || canvasMenu) {
                    resize();
                    isAnimating = true;
                    requestAnimationFrame(animate);
                }
            };

            // Global Event Listeners (Run once)
            window.addEventListener("resize", resize);
            window.addEventListener("mousemove", (e) => {
                if (!isMobile) {
                    mouse.x = e.clientX;
                    mouse.y = e.clientY;
                }
            });
            window.addEventListener(
                "touchstart",
                (e) => {
                    isTouching = true;
                    mouse.x = e.touches[0].clientX;
                    mouse.y = e.touches[0].clientY;
                },
                { passive: true },
            );
            window.addEventListener(
                "touchmove",
                (e) => {
                    mouse.x = e.touches[0].clientX;
                    mouse.y = e.touches[0].clientY;
                },
                { passive: true },
            );
            window.addEventListener("touchend", () => {
                isTouching = false;
            });
            window.addEventListener("click", (e) => {
                // Optimized click search
                const approxCol = Math.floor(e.clientX / hexXSpacing);
                const approxRow = Math.floor(e.clientY / hexYSpacing);
                const searchRange = 2;

                let closestHex = null;
                let minDist = Infinity;

                for (
                    let c = approxCol - searchRange;
                    c <= approxCol + searchRange;
                    c++
                ) {
                    if (!gridMap[c]) continue;
                    for (
                        let r = approxRow - searchRange;
                        r <= approxRow + searchRange;
                        r++
                    ) {
                        const hex = gridMap[c][r];
                        if (!hex) continue;
                        const dist = Math.hypot(
                            hex.x - e.clientX,
                            hex.y - e.clientY,
                        );
                        if (dist < minDist) {
                            minDist = dist;
                            closestHex = hex;
                        }
                    }
                }

                if (closestHex && ripples.length < 3) {
                    ripples.push({
                        x: closestHex.x,
                        y: closestHex.y,
                        radius: 0,
                        speed: isMobile ? 8 : 15,
                        maxRadius: Math.max(width, height) * 1.5,
                        life: 1.0,
                        decay: isMobile ? 0.001 : 0.005,
                    });
                }
            });

            // Lifecycle Management
            const init = () => {
                console.log("Init called");
                if (
                    sessionStorage.getItem("mobile-menu-transition") === "true"
                ) {
                    console.log(
                        "Init: transition flag found, starting close animation",
                    );
                    startMenuCloseAnimation = true;
                    sessionStorage.removeItem("mobile-menu-transition");
                } else {
                    console.log("Init: no transition flag");
                    startMenuCloseAnimation = false;
                }

                initScramble();
                initMagnetic();
                initMobileMenu();
                setupGrid();
            };

            const cleanup = () => {
                isAnimating = false;
                if (animationFrameId) {
                    cancelAnimationFrame(animationFrameId);
                }
            };

            document.addEventListener("astro:page-load", init);
            document.addEventListener("astro:before-swap", cleanup);

            // Initial load (in case astro:page-load doesn't fire on first visit in some setups, though it should)
