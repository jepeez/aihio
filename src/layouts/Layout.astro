                    originX = rect.left + rect.width / 2;
                    originY = rect.top + rect.height / 2;
                }

                const items = hexagons.map((hex, index) => {
                    const dist = Math.hypot(hex.x - originX, hex.y - originY);
                    // Quantize distance to create "rings" of hexagons
                    // This emphasizes the grid structure instead of a smooth circle
                    const ringSize = hexWidth * 0.5;
                    const ringIndex = Math.floor(dist / ringSize);
                    // Add slight deterministic variation within rings based on position
                    // to prevent it from looking too artificial
                    const variation = (hex.col % 3) * 5 + (hex.row % 3) * 5;

                    return {
                        index: index,
                        value: ringIndex * ringSize + variation,
                    };
                });

