            function drawStaticGrid() {
                if (!ctxStatic) return;
                ctxStatic.clearRect(0, 0, width, height);
                ctxStatic.lineWidth = 1;

                const opacity = isMobile ? 0.07 : 0.03;
                hexagons.forEach((hex) => {
