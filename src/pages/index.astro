---
import Layout from "../layouts/Layout.astro";
import HeroScene from "../components/HeroScene.jsx";
import ServicesSlider from "../components/ServicesSlider.jsx";
import WireframeIcon from "../components/WireframeIcon.jsx";

const base = import.meta.env.BASE_URL;
---

<Layout title="AIHIO VISUALS // DIGITAL AGENCY">
    <main class="relative z-10 pt-16 pointer-events-none">
        <!-- Hero Section -->
        <section
            id="hero"
            class="min-h-screen flex items-center justify-center relative pb-32 md:pb-40"
        >
            <div class="absolute inset-0 z-20 pointer-events-none">
                <HeroScene client:idle />
            </div>

            <div
                class="container mx-auto px-6 relative z-10 pointer-events-auto"
            >
                <div class="max-w-4xl mt-40 md:mt-0">
                    <div
                        class="hidden md:flex font-mono text-signal-blue text-sm mb-4 tracking-[0.2em] items-center gap-2"
                    >
                        <span class="w-4 h-[1px] bg-signal-blue"></span>
                        STRATEGISTA VERKKOSIVUSUUNNITTELUA
                    </div>
                    <h1
                        class="text-4xl md:text-7xl font-bold text-white tracking-tight leading-tight mb-6"
                    >
                        Räätälöityjä verkkosivustoja, jotka tekevät <span
                            class="text-signal-blue">tulosta.</span
                        >
                    </h1>
                    <p
                        class="text-white/90 text-lg md:text-xl max-w-2xl font-light leading-relaxed border-l border-signal-blue/30 pl-6"
                    >
                        Modernit ja <span class="font-bold text-white"
                            >salamannopeat</span
                        > verkkosivut, jotka on optimoitu muuttamaan kävijät <span
                            class="font-bold text-white">asiakkaiksi</span
                        >.
                    </p>

                    <div class="mt-8">
                        <div class="flex flex-wrap gap-4">
                            <a
                                href={`${base}hintalaskuri`}
                                class="hologram-btn green group w-full md:w-auto md:px-12"
                            >
                                <span data-text="LASKE HINTA NYT"
                                    >LASKE HINTA NYT</span
                                >
                                <div class="holo-scan-line"></div>
                                <div class="btn-border-t"></div>
                                <div class="btn-border-r"></div>
                                <div class="btn-border-b"></div>
                                <div class="btn-border-l"></div>
                            </a>
                        </div>
                        <p class="mt-4 text-sm text-white/50 font-mono">
                            Hinta-arvio 30 sekunnissa – ei sitoutumista.
                        </p>
                    </div>
                </div>
            </div>

            <!-- Decorative Elements -->
            <div
                class="absolute bottom-20 left-1/2 -translate-x-1/2 animate-bounce text-white/20"
            >
                <svg
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="1"
                >
                    <path d="M12 5v14M5 12l7 7 7-7"></path>
                </svg>
            </div>
        </section>

        <!-- Mission / About -->
        <section
            id="mission"
            class="py-24 md:py-32 relative border-t border-white/5 bg-hw-black/50 backdrop-blur-sm pointer-events-auto"
        >
            <div class="container mx-auto px-6">
                <div
                    class="flex items-end justify-between mb-16 border-b border-white/10 pb-6"
                >
                    <h2
                        class="font-mono text-2xl text-white flex items-center gap-3"
                    >
                        <span class="text-signal-blue">01.</span>
                        <span class="scramble-target">YDIN</span>
                    </h2>
                </div>
                <div class="grid md:grid-cols-2 gap-16 items-center">
                    <!-- Text Content (Left) -->
                    <div>
                        <h2
                            class="text-3xl md:text-5xl font-bold text-white mb-8 leading-tight"
                        >
                            Verkkosivut, jotka myyvät <span
                                class="text-signal-blue">puolestasi.</span
                            >
                        </h2>

                        <p class="text-white/70 text-lg leading-relaxed mb-6">
                            Sivustosi ei kuulu olla vain kulu, vaan yksi
                            yrityksesi tärkeimmistä tulonlähteistä ja
                            myyntikanavista.
                        </p>
                        <p class="text-white/70 text-lg leading-relaxed">
                            Rakennamme sivuston, joka herättää luottamusta
                            ensisilmäyksellä ja tekee ostamisesta sekä
                            asioinnista kitkatonta.
                        </p>
                    </div>

                    <!-- Benefits Grid (Right) -->
                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
                        <!-- Card 1: Salamannopea -->
                        <div
                            class="p-6 rounded-lg bg-black/40 border border-white/50 hover:border-signal-blue/50 transition-colors group relative overflow-hidden"
                        >
                            <div
                                class="absolute top-6 right-6 w-16 h-16 pointer-events-none"
                            >
                                <WireframeIcon
                                    icon="lightning"
                                    client:visible
                                />
                            </div>
                            <div class="pr-16 relative z-10">
                                <h3 class="text-white font-bold mb-2">
                                    Salamannopea
                                </h3>
                                <p class="text-white/50 text-base">
                                    Sivut aukeavat heti. Asiakkaasi eivät joudu
                                    odottamaan.
                                </p>
                            </div>
                        </div>

                        <!-- Card 2: Mobiili edellä -->
                        <div
                            class="p-6 rounded-lg bg-black/40 border border-white/50 hover:border-signal-blue/50 transition-colors group relative overflow-hidden"
                        >
                            <div
                                class="absolute top-6 right-6 w-16 h-16 pointer-events-none"
                            >
                                <WireframeIcon icon="phone" client:visible />
                            </div>
                            <div class="pr-16 relative z-10">
                                <h3 class="text-white font-bold mb-2">
                                    Mobiili edellä
                                </h3>
                                <p class="text-white/50 text-base">
                                    Suunniteltu toimimaan täydellisesti
                                    puhelimella.
                                </p>
                            </div>
                        </div>

                        <!-- Card 3: Löytyy Googlesta -->
                        <div
                            class="p-6 rounded-lg bg-black/40 border border-white/50 hover:border-signal-blue/50 transition-colors group relative overflow-hidden"
                        >
                            <div
                                class="absolute top-6 right-6 w-16 h-16 pointer-events-none"
                            >
                                <WireframeIcon icon="globe" client:visible />
                            </div>
                            <div class="pr-16 relative z-10">
                                <h3 class="text-white font-bold mb-2">
                                    Löytyy Googlesta
                                </h3>
                                <p class="text-white/50 text-base">
                                    Rakennettu niin, että hakukoneet ymmärtävät
                                    sisältösi.
                                </p>
                            </div>
                        </div>

                        <!-- Card 4: Maksimoitu myynti -->
                        <div
                            class="p-6 rounded-lg bg-black/40 border border-white/50 hover:border-signal-blue/50 transition-colors group relative overflow-hidden"
                        >
                            <div
                                class="absolute top-6 right-6 w-16 h-16 pointer-events-none"
                            >
                                <WireframeIcon icon="chart" client:visible />
                            </div>
                            <div class="pr-16 relative z-10">
                                <h3 class="text-white font-bold mb-2">
                                    Maksimoitu myynti
                                </h3>
                                <p class="text-white/50 text-base">
                                    Optimoitu rakenne maksimoi myynnin ja
                                    yhteydenotot.
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Capabilities Grid -->
        <section
            id="capabilities"
            class="py-24 md:py-32 relative pointer-events-auto"
        >
            <div class="container mx-auto px-6">
                <div
                    class="flex items-end justify-between mb-16 border-b border-white/10 pb-6"
                >
                    <h2
                        class="font-mono text-2xl text-white flex items-center gap-3"
                    >
                        <span class="text-signal-blue">02.</span>
                        <span class="scramble-target">PALVELUT</span>
                    </h2>
                    <div
                        class="font-mono text-xs text-white/40 hidden md:block"
                    >
                        <!-- Removed decorative code -->
                    </div>
                </div>

                <div class="md:hidden -mx-6">
                    <ServicesSlider client:visible />
                </div>

                <div class="hidden md:grid md:grid-cols-3 gap-6">
                    <!-- Card 1 -->
                    <div
                        class="glass-panel p-8 group relative min-h-[240px] md:min-h-[300px] flex flex-col justify-between transition-all duration-300 hover:bg-white/5 cursor-crosshair overflow-hidden"
                    >
                        <!-- Background Image -->
                        <div class="absolute inset-0 z-0 pointer-events-none">
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent"
                            >
                            </div>
                        </div>

                        <!-- Corner Brackets -->
                        <div
                            class="corner-bracket corner-bracket-tl top-0 left-0 border-t border-l border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-tr top-0 right-0 border-t border-r border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-bl bottom-0 left-0 border-b border-l border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-br bottom-0 right-0 border-b border-r border-white/20 z-20"
                        >
                        </div>

                        <div class="relative z-10 pointer-events-none">
                            <div
                                class="w-10 h-10 border border-signal-blue/30 flex items-center justify-center mb-6 text-signal-blue"
                            >
                                <svg
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <rect
                                        x="3"
                                        y="3"
                                        width="18"
                                        height="18"
                                        rx="2"
                                        ry="2"></rect>
                                    <line x1="3" y1="9" x2="21" y2="9"></line>
                                    <line x1="9" y1="21" x2="9" y2="9"></line>
                                    <rect x="14" y="13" width="4" height="4"
                                    ></rect>
                                </svg>
                            </div>
                            <h3
                                class="text-xl font-bold text-white mb-6 scramble-target"
                            >
                                YRITYSSIVUSTOT
                            </h3>
                            <p
                                class="hidden md:block text-white/50 text-base leading-relaxed"
                            >
                                Moderni digitaalinen pääkonttori. Rakennamme
                                uskottavuutta herättävät sivustot, jotka on
                                optimoitu keräämään liidejä.
                            </p>
                            <p
                                class="md:hidden text-white/50 text-base leading-relaxed"
                            >
                                Moderni digitaalinen pääkonttori. Uskottavat
                                sivustot liidien keruuseen.
                            </p>
                        </div>
                        <div
                            class="relative z-10 font-mono text-[10px] text-signal-blue/50 mt-8"
                        >
                            CORPORATE
                        </div>
                    </div>

                    <!-- Card 2 -->
                    <div
                        class="glass-panel p-8 group relative min-h-[240px] md:min-h-[300px] flex flex-col justify-between transition-all duration-300 hover:bg-white/5 cursor-crosshair overflow-hidden"
                    >
                        <!-- Background Image -->
                        <div class="absolute inset-0 z-0 pointer-events-none">
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent"
                            >
                            </div>
                        </div>

                        <div
                            class="corner-bracket corner-bracket-tl top-0 left-0 border-t border-l border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-tr top-0 right-0 border-t border-r border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-bl bottom-0 left-0 border-b border-l border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-br bottom-0 right-0 border-b border-r border-white/20 z-20"
                        >
                        </div>

                        <div class="relative z-10 pointer-events-none">
                            <div
                                class="w-10 h-10 border border-[#0aff68]/30 flex items-center justify-center mb-6 text-[#0aff68]"
                            >
                                <svg
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <path
                                        d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"
                                    ></path>
                                    <line x1="3" y1="6" x2="21" y2="6"></line>
                                    <path d="M16 10a4 4 0 0 1-8 0"></path>
                                </svg>
                            </div>
                            <h3
                                class="text-xl font-bold text-white mb-6 scramble-target"
                            >
                                VERKKOKAUPAT
                            </h3>
                            <p
                                class="hidden md:block text-white/50 text-base leading-relaxed"
                            >
                                Skaalautuvat kaupparatkaisut. Keskitymme
                                kassavirran kasvattamiseen poistamalla ostopolun
                                tekniset esteet.
                            </p>
                            <p
                                class="md:hidden text-white/50 text-base leading-relaxed"
                            >
                                Skaalautuvat kaupparatkaisut. Kassavirran
                                kasvattaminen.
                            </p>
                        </div>
                        <div
                            class="relative z-10 font-mono text-[10px] text-[#0aff68]/50 mt-8"
                        >
                            COMMERCE
                        </div>
                    </div>

                    <!-- Card 3 -->
                    <div
                        class="glass-panel p-8 group relative min-h-[240px] md:min-h-[300px] flex flex-col justify-between transition-all duration-300 hover:bg-white/5 cursor-crosshair overflow-hidden"
                    >
                        <!-- Background Image -->
                        <div class="absolute inset-0 z-0 pointer-events-none">
                            <div
                                class="absolute inset-0 bg-gradient-to-t from-black/90 via-black/50 to-transparent"
                            >
                            </div>
                        </div>

                        <div
                            class="corner-bracket corner-bracket-tl top-0 left-0 border-t border-l border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-tr top-0 right-0 border-t border-r border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-bl bottom-0 left-0 border-b border-l border-white/20 z-20"
                        >
                        </div>
                        <div
                            class="corner-bracket corner-bracket-br bottom-0 right-0 border-b border-r border-white/20 z-20"
                        >
                        </div>

                        <div class="relative z-10 pointer-events-none">
                            <div
                                class="w-10 h-10 border border-[#a855f7]/30 flex items-center justify-center mb-6 text-[#a855f7]"
                            >
                                <svg
                                    width="24"
                                    height="24"
                                    viewBox="0 0 24 24"
                                    fill="none"
                                    stroke="currentColor"
                                    stroke-width="1.5"
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                >
                                    <polyline
                                        points="22 12 18 12 15 21 9 3 6 12 2 12"
                                    ></polyline>
                                </svg>
                            </div>
                            <h3
                                class="text-xl font-bold text-white mb-6 scramble-target"
                            >
                                KAMPANJAT & NOPEUS
                            </h3>
                            <p
                                class="hidden md:block text-white/50 text-base leading-relaxed"
                            >
                                Täsmäaseet markkinointiin. Korkean konversion
                                laskeutumissivut ja nykyisen sivuston
                                nopeusoptimointi.
                            </p>
                            <p
                                class="md:hidden text-white/50 text-base leading-relaxed"
                            >
                                Täsmäaseet markkinointiin. Laskeutumissivut ja
                                nopeusoptimointi.
                            </p>
                        </div>
                        <div
                            class="relative z-10 font-mono text-[10px] text-[#a855f7]/50 mt-8"
                        >
                            PERFORMANCE
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Portfolio Section -->
        <section
            id="portfolio"
            class="py-24 md:py-32 relative border-t border-white/5 bg-hw-black/50 backdrop-blur-sm pointer-events-auto"
        >
            <div class="container mx-auto px-6">
                <div
                    class="flex items-end justify-between mb-16 border-b border-white/10 pb-6"
                >
                    <h2
                        class="font-mono text-2xl text-white flex items-center gap-3"
                    >
                        <span class="text-signal-blue">03.</span>
                        <span class="scramble-target">PORTFOLIO</span>
                    </h2>
                    <a
                        href={`${base}portfolio`}
                        class="hidden md:flex items-center gap-2 font-mono text-xs text-signal-blue hover:text-white transition-colors group"
                    >
                        KATSO KAIKKI
                        <svg
                            width="12"
                            height="12"
                            viewBox="0 0 12 12"
                            fill="none"
                            stroke="currentColor"
                            class="group-hover:translate-x-1 transition-transform"
                        >
                            <path d="M1 6h10M7 2l4 4-4 4"></path>
                        </svg>
                    </a>
                </div>

                <div class="grid md:grid-cols-2 gap-8">
                    <!-- Project 1 -->
                    <a
                        href={`${base}portfolio`}
                        class="group relative block aspect-video overflow-hidden border border-white/10 bg-white/5"
                    >
                        <div
                            class="absolute inset-0 bg-signal-blue/10 opacity-0 md:group-hover:opacity-100 transition-opacity z-10"
                        >
                        </div>
                        <img
                            src={`${base}mirrymockup.webp`}
                            alt="Mirrykoru Project Mockup"
                            class="w-full h-full object-cover transition-transform duration-700 md:group-hover:scale-105 opacity-60 md:group-hover:opacity-100"
                        />
                        <div
                            class="absolute bottom-0 left-0 w-full p-6 bg-gradient-to-t from-black/90 to-transparent z-20 translate-y-0 md:translate-y-4 md:group-hover:translate-y-0 transition-transform"
                        >
                            <h3 class="font-mono text-lg text-white mb-1">
                                MIRRYKORU
                            </h3>
                            <p class="text-sm text-signal-blue font-mono">
                                WEB DESIGN // BRANDING // COMMERCE
                            </p>
                        </div>
                    </a>

                    <!-- Project 2 -->
                    <a
                        href={`${base}portfolio`}
                        class="group relative block aspect-video overflow-hidden border border-white/10 bg-white/5"
                    >
                        <div
                            class="absolute inset-0 bg-signal-blue/10 opacity-0 md:group-hover:opacity-100 transition-opacity z-10"
                        >
                        </div>
                        <img
                            src={`${base}owleyemockup.webp`}
                            alt="OWLEYE Project Mockup"
                            class="w-full h-full object-cover transition-transform duration-700 md:group-hover:scale-105 opacity-60 md:group-hover:opacity-100"
                        />
                        <div
                            class="absolute bottom-0 left-0 w-full p-6 bg-gradient-to-t from-black/90 to-transparent z-20 translate-y-0 md:translate-y-4 md:group-hover:translate-y-0 transition-transform"
                        >
                            <h3 class="font-mono text-lg text-white mb-1">
                                OWLEYE
                            </h3>
                            <p class="text-sm text-signal-blue font-mono">
                                WEBDESIGN
                            </p>
                        </div>
                    </a>
                </div>

                <div class="mt-8 md:hidden flex justify-center">
                    <a
                        href={`${base}portfolio`}
                        class="font-mono text-signal-blue hover:text-white transition-colors"
                    >
                        KATSO KAIKKI ->
                    </a>
                </div>
            </div>
        </section>

        <!-- Contact Section -->
        <section
            id="contact"
            class="py-24 md:py-32 relative border-t border-white/10 pointer-events-auto"
        >
            <div class="container mx-auto px-6 text-center">
                <div
                    class="inline-block p-px bg-gradient-to-r from-transparent via-signal-blue/50 to-transparent mb-12"
                >
                    <div
                        class="bg-hw-black px-6 py-2 font-mono text-sm text-signal-blue"
                    >
                        YHTEYS
                    </div>
                </div>

                <h2
                    class="text-4xl md:text-6xl font-bold text-white mb-8 tracking-tight scramble-target"
                >
                    ALOITETAAN <br class="md:hidden" /> YHTEISTYÖ
                </h2>
                <p
                    class="text-white/50 text-lg md:text-xl max-w-2xl mx-auto mb-12 leading-relaxed"
                >
                    Ota yhteyttä, niin suunnitellaan yrityksellesi sopiva
                    ratkaisu.
                </p>

                <div class="flex justify-center relative z-20">
                    <a
                        href={`${base}yhteystiedot`}
                        class="hologram-btn green group w-full md:w-auto px-12 py-4 text-lg"
                        data-text="PYYDÄ TARJOUS"
                    >
                        <span data-text="PYYDÄ TARJOUS">PYYDÄ TARJOUS</span>
                        <div class="holo-scan-line"></div>
                        <div class="btn-border-t"></div>
                        <div class="btn-border-r"></div>
                        <div class="btn-border-b"></div>
                        <div class="btn-border-l"></div>
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>
