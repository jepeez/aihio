---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Brand Identity | AIHIO">
    <main class="pt-32 pb-20 px-6 min-h-screen relative overflow-hidden">
        <div class="container mx-auto max-w-6xl relative z-10">
            <!-- Header -->
            <div class="mb-20">
                <h1
                    class="text-4xl md:text-6xl font-bold font-mono tracking-tighter mb-4 scramble-target text-white"
                >
                    BRAND IDENTITY
                </h1>
                <p
                    class="text-white/60 font-mono text-sm md:text-base max-w-2xl border-l border-signal-blue pl-4"
                >
                    Core visual elements defining the Aihio Visuals aesthetic.
                    <br />
                    Precision. Performance. Cyber-aesthetics.
                </p>
            </div>

            <!-- Color Palette -->
            <section class="mb-24">
                <div class="flex items-center gap-4 mb-8">
                    <h2
                        class="text-2xl font-mono text-signal-blue tracking-widest uppercase"
                    >
                        01. Chromatic Map
                    </h2>
                    <div class="h-px bg-signal-blue/20 flex-1"></div>
                </div>

                <div
                    class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6"
                >
                    <!-- Signal Blue -->
                    <div
                        class="group relative bg-[#0299e1]/5 border border-[#0299e1]/20 hover:border-[#0299e1] transition-all duration-300 p-6"
                    >
                        <div
                            class="aspect-square bg-[#0299e1] mb-4 relative overflow-hidden group-hover:shadow-[0_0_30px_#0299e1] transition-all"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-tr from-black/20 to-transparent"
                            >
                            </div>
                        </div>
                        <div class="font-mono">
                            <div class="text-[#0299e1] font-bold text-lg mb-1">
                                Signal Blue
                            </div>
                            <div class="text-white/50 text-xs tracking-wider">
                                #0299e1
                            </div>
                            <div
                                class="mt-4 text-xs text-white/40 border-t border-white/10 pt-2"
                            >
                                Primary Brand Color<br />Interactions,
                                Highlights
                            </div>
                        </div>
                        <!-- Corner Accents -->
                        <div
                            class="absolute top-0 left-0 w-2 h-2 border-l border-t border-[#0299e1] opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                        </div>
                        <div
                            class="absolute bottom-0 right-0 w-2 h-2 border-r border-b border-[#0299e1] opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                        </div>
                    </div>

                    <!-- Signal Green -->
                    <div
                        class="group relative bg-[#0aff68]/5 border border-[#0aff68]/20 hover:border-[#0aff68] transition-all duration-300 p-6"
                    >
                        <div
                            class="aspect-square bg-[#0aff68] mb-4 relative overflow-hidden group-hover:shadow-[0_0_30px_#0aff68] transition-all"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-tr from-black/20 to-transparent"
                            >
                            </div>
                        </div>
                        <div class="font-mono">
                            <div class="text-[#0aff68] font-bold text-lg mb-1">
                                Signal Green
                            </div>
                            <div class="text-white/50 text-xs tracking-wider">
                                #0aff68
                            </div>
                            <div
                                class="mt-4 text-xs text-white/40 border-t border-white/10 pt-2"
                            >
                                Success States<br />Call to Actions
                            </div>
                        </div>
                        <div
                            class="absolute top-0 left-0 w-2 h-2 border-l border-t border-[#0aff68] opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                        </div>
                        <div
                            class="absolute bottom-0 right-0 w-2 h-2 border-r border-b border-[#0aff68] opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                        </div>
                    </div>

                    <!-- Noise Red -->
                    <div
                        class="group relative bg-[#ff3333]/5 border border-[#ff3333]/20 hover:border-[#ff3333] transition-all duration-300 p-6"
                    >
                        <div
                            class="aspect-square bg-[#ff3333] mb-4 relative overflow-hidden group-hover:shadow-[0_0_30px_#ff3333] transition-all"
                        >
                            <div
                                class="absolute inset-0 bg-gradient-to-tr from-black/20 to-transparent"
                            >
                            </div>
                        </div>
                        <div class="font-mono">
                            <div class="text-[#ff3333] font-bold text-lg mb-1">
                                Noise Red
                            </div>
                            <div class="text-white/50 text-xs tracking-wider">
                                #ff3333
                            </div>
                            <div
                                class="mt-4 text-xs text-white/40 border-t border-white/10 pt-2"
                            >
                                Errors, Alerts<br />Visual Noise
                            </div>
                        </div>
                        <div
                            class="absolute top-0 left-0 w-2 h-2 border-l border-t border-[#ff3333] opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                        </div>
                        <div
                            class="absolute bottom-0 right-0 w-2 h-2 border-r border-b border-[#ff3333] opacity-0 group-hover:opacity-100 transition-opacity"
                        >
                        </div>
                    </div>

                    <!-- Hard Black -->
                    <div
                        class="group relative bg-[#050505] border border-white/20 hover:border-white/60 transition-all duration-300 p-6"
                    >
                        <div
                            class="aspect-square bg-[#050505] mb-4 relative overflow-hidden border border-white/10 group-hover:shadow-[0_0_30px_rgba(255,255,255,0.1)] transition-all"
                        >
                        </div>
                        <div class="font-mono">
                            <div class="text-white font-bold text-lg mb-1">
                                Hard Black
                            </div>
                            <div class="text-white/50 text-xs tracking-wider">
                                #050505
                            </div>
                            <div
                                class="mt-4 text-xs text-white/40 border-t border-white/10 pt-2"
                            >
                                Primary Background<br />Dark Mode Base
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Typography -->
            <section class="mb-24">
                <div class="flex items-center gap-4 mb-8">
                    <h2
                        class="text-2xl font-mono text-signal-blue tracking-widest uppercase"
                    >
                        02. Typography
                    </h2>
                    <div class="h-px bg-signal-blue/20 flex-1"></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <!-- Inter -->
                    <div
                        class="p-8 border border-white/10 relative overflow-hidden group hover:border-signal-blue/50 transition-colors"
                    >
                        <div
                            class="absolute top-0 right-0 p-4 font-mono text-xs text-white/20"
                        >
                            SANS-SERIF
                        </div>
                        <div
                            class="text-6xl font-bold mb-4 font-sans text-white"
                        >
                            Aa
                        </div>
                        <h3 class="text-2xl font-bold font-sans mb-2">Inter</h3>
                        <p
                            class="text-white/60 text-sm leading-relaxed mb-6 max-w-md"
                        >
                            The primary typeface for headings and body copy.
                            Selected for its high legibility and neutral, modern
                            aesthetic that compliments the technical feel.
                        </p>
                        <div class="space-y-4">
                            <div class="flex items-center gap-4">
                                <span
                                    class="text-white/40 font-mono text-xs w-16"
                                    >REGULAR</span
                                >
                                <span class="font-sans font-normal text-lg"
                                    >The quick brown fox</span
                                >
                            </div>
                            <div class="flex items-center gap-4">
                                <span
                                    class="text-white/40 font-mono text-xs w-16"
                                    >BOLD</span
                                >
                                <span class="font-sans font-bold text-lg"
                                    >The quick brown fox</span
                                >
                            </div>
                        </div>
                    </div>

                    <!-- JetBrains Mono -->
                    <div
                        class="p-8 border border-white/10 relative overflow-hidden group hover:border-signal-blue/50 transition-colors"
                    >
                        <div
                            class="absolute top-0 right-0 p-4 font-mono text-xs text-white/20"
                        >
                            MONOSPACE
                        </div>
                        <div
                            class="text-6xl font-bold mb-4 font-mono text-signal-blue"
                        >
                            Aa
                        </div>
                        <h3 class="text-2xl font-bold font-mono mb-2">
                            JetBrains Mono
                        </h3>
                        <p
                            class="text-white/60 text-sm leading-relaxed mb-6 max-w-md"
                        >
                            Used for metadata, code snippets, and decorative UI
                            elements. Reinforces the engineering and technical
                            identity of the brand.
                        </p>
                        <div class="space-y-4">
                            <div class="flex items-center gap-4">
                                <span
                                    class="text-white/40 font-mono text-xs w-16"
                                    >REGULAR</span
                                >
                                <span class="font-mono font-normal text-lg"
                                    >The quick brown fox</span
                                >
                            </div>
                            <div class="flex items-center gap-4">
                                <span
                                    class="text-white/40 font-mono text-xs w-16"
                                    >BOLD</span
                                >
                                <span class="font-mono font-bold text-lg"
                                    >The quick brown fox</span
                                >
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- UI Elements & Gradients -->
            <section>
                <div class="flex items-center gap-4 mb-8">
                    <h2
                        class="text-2xl font-mono text-signal-blue tracking-widest uppercase"
                    >
                        03. UI Elements & Effects
                    </h2>
                    <div class="h-px bg-signal-blue/20 flex-1"></div>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                    <!-- Glass Panel -->
                    <div
                        class="glass-panel p-6 h-40 flex items-center justify-center relative group"
                    >
                        <span class="font-mono text-sm text-white/60 z-10"
                            >Glass Panel</span
                        >
                        <div
                            class="absolute inset-0 bg-signal-blue/5 opacity-0 group-hover:opacity-100 transition-opacity duration-500"
                        >
                        </div>
                    </div>

                    <!-- Gradient Map -->
                    <div
                        class="h-40 relative flex items-center justify-center border border-white/10 overflow-hidden bg-hw-black"
                    >
                        <div
                            class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(2,153,225,0.2)_0%,rgba(5,5,5,0.95)_100%)]"
                        >
                        </div>
                        <span
                            class="relative z-10 font-mono text-sm text-signal-blue mix-blend-screen"
                            >Radial Glow</span
                        >
                    </div>

                    <!-- Glitch Scan -->
                    <div
                        class="h-40 relative flex items-center justify-center border border-signal-blue/30 bg-signal-blue/5 overflow-hidden"
                    >
                        <div
                            class="absolute inset-0 bg-[linear-gradient(90deg,transparent,rgba(2,153,225,0.2),transparent)] animate-scan-horizontal"
                        >
                        </div>
                        <span
                            class="relative z-10 font-mono text-sm text-signal-blue"
                            >Scanline Effect</span
                        >
                    </div>
                </div>
            </section>
        </div>
    </main>
</Layout>

<script>
    import { ScrambleText } from "../scripts/scramble.js";

    // Initialize Scramble
    const titles = document.querySelectorAll(".scramble-target");
    titles.forEach((el) => new ScrambleText(el));
</script>
