                </div>
            </div>
        </div>
    </main>

    <script>
        // 3D Tilt Logic
        document.addEventListener("DOMContentLoaded", () => {
            const cards = document.querySelectorAll(".tilt-card");

            cards.forEach((card) => {
                card.addEventListener("mousemove", (e) => {
                    const rect = card.getBoundingClientRect();
                    const x = e.clientX - rect.left;
                    const y = e.clientY - rect.top;

                    // Set CSS variables for radial gradient
                    card.style.setProperty("--mouse-x", `${x}px`);
                    card.style.setProperty("--mouse-y", `${y}px`);

                    // Calculate center relative coordinates (-1 to 1)
                    const centerX = (x / rect.width) * 2 - 1;
                    const centerY = (y / rect.height) * 2 - 1;

                    // Max tilt angle
                    const maxTilt = 8; // Subtle but noticeable

                    // Apply transform
                    card.style.transform = `perspective(1000px) rotateX(${-centerY * maxTilt}deg) rotateY(${centerX * maxTilt}deg) scale3d(1.02, 1.02, 1.02)`;
                });

                card.addEventListener("mouseleave", () => {
                    card.style.transform =
                        "perspective(1000px) rotateX(0) rotateY(0) scale3d(1, 1, 1)";
                });
            });
        });
    </script>
